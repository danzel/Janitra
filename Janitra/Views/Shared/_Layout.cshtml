@using Microsoft.Extensions.DependencyInjection
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Janitra</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.5.1/css/bulma.min.css">
    <link rel="stylesheet" href="~/css/janitra.css" asp-append-version="true">

</head>
<body>

<nav class="navbar">
    <div class="navbar-brand">
        <a class="navbar-item" href="/">
            Janitra
        </a>
        <div class="navbar-burger">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>
    <div class="navbar-menu">
        <div class="navbar-start">
            <a class="navbar-item" href="/builds">
                Builds
            </a>
            <a class="navbar-item" href="/testdefinitions">
                HW Tests
            </a>
            <a class="navbar-item" href="/roms">
                Rom Tests
            </a>
            <a class="navbar-item" href="/janitrabots">
                Bots
            </a>
        </div>
        <div class="navbar-end">
            <div class="navbar-item">
                @{
                    var user = Context.RequestServices.GetService<Janitra.Services.CurrentUser>();
                    if (user.User == null)
                    {
                        <a asp-controller="Auth" asp-action="Index">Log In</a>
                    }
                    else
                    {
                        <a asp-controller="Auth" asp-action="LogOut">Log Out</a>
                    }
                }
            </div>
        </div>
    </div>
</nav>
@RenderBody()

<script src="~/js/menu.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)
</body>