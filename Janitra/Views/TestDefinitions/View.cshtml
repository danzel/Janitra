@model Janitra.Data.Models.TestDefinition
@{
    ViewData["Title"] = "View Test";
}
<section class="hero is-primary">
    <div class="hero-body">
        <div class="container">
            <h1 class="title">
                @Model.TestName
            </h1>
        </div>
    </div>
</section>
<section class="section">
    <div class="field is-horizontal">
        <div class="field-label">
            <label class="label">Notes</label>
        </div>
        <div class="field-body">
            <div class="field">
                @foreach (var line in @Model.Notes.Split('\n'))
                {
                    @line<br/>
                }
            </div>
        </div>
    </div>
    
    <div class="field is-horizontal">
        <div class="field-label">
            <label class="label">Added At</label>
        </div>
        <div class="field-body">
            <div class="field">
                @Model.AddedAt.ToString("yyyy-MM-dd")
            </div>
        </div>
    </div>

    <a class="button is-info" href="@Model.TestRom.RomUrl">
        <span class="icon">
            <i class="fa fa-download"></i>
        </span>
        <span>Download Rom</span>
    </a>
    <a class="button is-info" href="@Model.MovieUrl">
        <span class="icon">
            <i class="fa fa-file-video-o"></i>
        </span>
        <span>Download Movie</span>
    </a>
    <a class="button is-info" href="@Model.TestRom.CodeUrl">
        <span class="icon">
            <i class="fa fa-code"></i>
        </span>
        <span>View Source Code</span>
    </a>
</section>
<section class="section">
    <vc:test-results-for-test-table test-definition-id="@Model.TestDefinitionId"></vc:test-results-for-test-table>
</section>
